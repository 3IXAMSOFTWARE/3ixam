

#include "node_fresnel.h"
#include "stdcycles.h"

shader node_velvet_bsdf(color Color = 0.8,
                        float Sigma = 0.0,
                        normal Normal = N,
                        output closure color BSDF = 0)
{
  float sigma = clamp(Sigma, 0.0, 1.0);

  BSDF = Color * ashikhmin_velvet(Normal, sigma);
}
